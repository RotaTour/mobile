<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:card_view="https://schemas.android.com/apk/res-auto"
                                    xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:tools="http://schemas.android.com/tools"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:id="@+id/cv_Pubs"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@color/white"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginBottom="5dp"
                                    card_view:cardCornerRadius="4dp"
                                    tools:ignore="NamespaceTypo">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/white"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:background="@color/white"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/coverImageView"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="start"
                android:src="@drawable/logo"
                android:scaleType="centerCrop"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tvNomeUser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:padding="8dp"
                    android:textSize="18sp"
                    android:textColor="@color/jet"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/tvDataPub"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:padding="8dp"
                    android:textSize="15sp"
                    android:textColor="@color/jet"/>
                <TextView
                    android:id="@+id/tvPub"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvNomeUser"
                    android:padding="8dp"
                    android:textSize="16sp"
                    android:textColor="@color/jet"/>
            </RelativeLayout>
        </LinearLayout>
        <com.like.LikeButton
            app:icon_type="heart"
            app:icon_size="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/btnPubLike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>
</android.support.v7.widget.CardView>